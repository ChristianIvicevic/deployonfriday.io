{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":label(renovate)",
    ":rebaseStalePrs",
    ":automergeBranch",
    ":disableDependencyDashboard"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^@blueprintjs/",
        "^@types/",
        "^typescript-eslint",
        "^eslint",
        "^prettier",
        "^rehype",
        "^remark",
        "type-fest",
        "typescript"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
